<Window x:Class="CaloriesCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator Calorii" Height="700" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Calendar and Controls -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <Calendar Name="calendar" Margin="0,0,0,10" SelectedDatesChanged="calendar_SelectedDatesChanged"/>
            
            <GroupBox Header="Setări" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Label Content="Număr Copii:"/>
                    <TextBox Name="txtKidsCount" Text="1" Margin="0,0,0,5" TextChanged="txtKidsCount_TextChanged"/>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Acțiuni" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Button Name="btnAddDatabase" Content="Bază de Date Alimente" Margin="0,5" Height="30" Click="btnAddDatabase_Click"/>
                    <Button Name="btnCreateExcel" Content="Generare Excel" Margin="0,5" Height="30" Click="btnCreateExcel_Click"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Totaluri Zilnice (Per Copil)" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Content="Proteine:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Name="lblTotalProteins" Text="0" VerticalAlignment="Center"/>
                    
                    <Label Grid.Row="1" Content="Lipide:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Name="lblTotalLipids" Text="0" VerticalAlignment="Center"/>
                    
                    <Label Grid.Row="2" Content="Glucide:"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Name="lblTotalCarbs" Text="0" VerticalAlignment="Center"/>
                    
                    <Label Grid.Row="3" Content="Fibre:"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Name="lblTotalFibers" Text="0" VerticalAlignment="Center"/>
                    
                    <Label Grid.Row="4" Content="Calorii:"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Name="lblTotalCalories" Text="0" VerticalAlignment="Center" FontWeight="Bold"/>
                </Grid>
            </GroupBox>
        </StackPanel>

        <!-- Right Panel: Meals and Ingredients -->
        <ScrollViewer Grid.Column="1">
            <StackPanel>
                <GroupBox Header="Meniul Zilei" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Mic Dejun (Ora 9):"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Name="txtBreakfastMenu" Margin="0,2" TextChanged="Menu_TextChanged"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Gustare (Ora 10):"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="txtSnackMenu" Margin="0,2" TextChanged="Menu_TextChanged"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Prânz (Ora 12):"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="txtLunchMenu" Margin="0,2" TextChanged="Menu_TextChanged"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="Cină (Ora 16):"/>
                        <TextBox Grid.Row="3" Grid.Column="1" Name="txtDinnerMenu" Margin="0,2" TextChanged="Menu_TextChanged"/>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Lista Ingrediente" Margin="0,0,0,10">
                    <StackPanel>
                        <DataGrid Name="gridIngredients" AutoGenerateColumns="False" Height="300" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Aliment" Binding="{Binding Food.Name}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Cant (g)" Binding="{Binding Quantity}" Width="60" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Kcal" Binding="{Binding TotalCalories, StringFormat=F1}" Width="60" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                            <Button Content="Adaugă Ingredient" Width="120" Margin="5,0" Click="btnAddIngredient_Click"/>
                            <Button Content="Șterge" Width="75" Margin="5,0" Click="btnRemoveIngredient_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
